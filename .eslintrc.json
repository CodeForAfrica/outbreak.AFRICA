{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": [
    "module-resolver",
    "react-hooks",
    "json",
    "markdown"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "module-resolver/use-alias": 2,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "no-nested-ternary": "off"
  }
}
